<%- include('../layouts/adminHeader.ejs') -%>
<!-- Recent Sales Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h6 class="mb-0">Latest Orders</h6>
                        <!-- <a href="">Show All</a> -->
                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-white">
                                    <th></th>
                                    <th scope="col">Order ID</th>
                                    <th scope="col">User ID</th>
                                    <th scope="col">Payment Method</th>
                                    <th scope="col">Total_amt</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">View Details</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                <%order.forEach(Order=>{%>
                                <% if(Order.flag=="paid"){ %>
                                <%Order.items.forEach(product=>{%>
                                    <tr>
                                        <td>
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="customCheck2">
                                                <label class="custom-control-label" for="customCheck2">&nbsp;</label>
                                            </div>
                                        </td>
                                        <td><%=Order.orderId%></td>
                                        <td><%=Order.user._id%></td>
                                        <td>
                                        <%if(Order.paymentMethod=='COD'){%>
                                            <p></p><%=Order.paymentMethod%>
                                            <%}%>
                                        <%if(Order.paymentMethod=='online'){%>
                                            <i class="fab fa-cc-mastercard me-1"></i> <%=Order.paymentMethod%>
                                            <%}%>
                                        </td>
                                        <td>
                                             <%=product.sub_total%>
                                        </td>
                                        <td>
                                            
                                            <%if(product.status=='cancelled'){%>
                                                <span class="badge rounded-pill bg-soft-pink"><%=product.status%></span>
                                                <%}%>
                                               
                                                    <%if(product.status=='return'||product.status=='refund-approved'){%>
                                                        <span class="badge rounded-pill bg-soft-orange"><%=product.status%></span>
                                                        <%}%>
                                                        <%if(product.status=='placed'||product.status=='shipped'||product.status=='delivered'||product.status=='return-denied'){%>
                                                            <span class="badge rounded-pill bg-soft-green"><%=product.status%></span>
                                                            <%}%> 
                                        </td>
                                        <td>
                                            <a href="/admin/dashboard/orderDetails?prdctId=<%=product.item%>&ordId=<%=Order._id%>"><button type="button" class="btn btn-primary btn-sm btn-rounded">
                                                View Details
                                            </button></a>

                                        </td>

                                </tr>
                                <%})%>
                                <%}%>
                                <%})%>

                                
                            </tbody>
                        </table>

                                
                    </div>
                </div>
            </div>
            
            <!-- <a class="btn btn-sm btn-primary m-3" href="/admin/dashboard/categories/add-category">Add Category</a></td> -->
            <a class="btn btn-sm btn-primary m-3" href="/admin/dashboard">Back</a></td>
          

          
        </div>
        <!-- Content End -->


        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
   
    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</body>

</html>