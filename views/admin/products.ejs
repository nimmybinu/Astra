<%- include('../layouts/adminHeader.ejs') -%>

<!-- Recent Sales Start -->
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">All Products</h6>
            <a href="">Show All</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col"><input class="form-check-input" type="checkbox"></th>
                        <th scope="col">pdtID</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Category</th>
                        <th scope="col">Price</th>
                        <th scope="col">SalePrice</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Size</th>
                        <th scope="col">Image</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (products.length > 0) { %>
                    <% for (let i = 0; i < products.length; i++) { %>
                    <tr>
                        <td><input class="form-check-input" type="checkbox"></td>
                        <td><%= products[i].pdtID %></td>
                        <td><%= products[i].title %></td>
                        <td><%= products[i].desc %></td>
                        <td><%= products[i].category %></td>
                        <td><%= products[i].price %></td>
                        <td><%= products[i].saleprice %></td>
                        <td><%= products[i].stock %></td>
                        <td><%= products[i].size %></td>
                        <td>
                            <% for (let j = 0; j < products[i].image.length; j++) { %>
                            <img src="/userImages/<%= products[i].image[j] %>" width="50px" height="50px"
                                alt="<%= products[i].image[j] %>">
                            <% } %>
                        </td>

                        <td>
                            <a href="/admin/dashboard/products/edit-product?id=<%= products[i]._id %>"
                                style="margin-right: 10px;">Edit</a>
                            <a href="/admin/dashboard/products/delete-product?id=<%= products[i]._id %>">Delete</a>
                        </td>
                    </tr>
                    <% } %>
                    <% } else { %>
                    <tr>
                        <td colspan="5">no products found</td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Recent Sales End -->

<a class="btn btn-sm btn-primary m-3" href="/admin/dashboard/products/add-product">Add Product</a>
<a class="btn btn-sm btn-primary" href="/admin/dashboard">Back</a>

<!-- Footer Start -->

<!-- Footer End -->
</div>
<!-- Content End -->

<!-- Back to Top -->
<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
</div>

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Template Javascript -->
<script src="js/main.js"></script>
</body>

</html>
