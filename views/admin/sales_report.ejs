<%- include('../layouts/adminHeader.ejs') -%>
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">

            <h4 class="mb-0">Sales Report</h4>
             <form action="/admin/salesReportSort" method="post">
                <div class="d-md-flex mx-3 justify-content-md-end">

                  <div class=" mx-2">
                    <h4>From</h4>
                    <input type="date" name="fromDate">
                  </div>
                  <div>
                    <h4>To</h4>
                    <input type="date" name="toDate">
                  </div>


                </div>
                <div class="d-flex justify-content-end pt-2">
                  <button class="btn btn-primary" type="submit">submit</button>
                </div>
              </form>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        
                        
                        <th scope="col">Date</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Price</th>
                        <th scope="col">Payment Method</th>
                        <th scope="col">Total Amount</th>
                        <th scope="col">Status</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach((order,i)=> { %>
                        <% order.items.forEach(ordPrdct => { %>
                          <% if(ordPrdct.status=="delivered"){ %>
                        <tr>
                          
                          <td>
                            <%= order.createdAt.toLocaleDateString('en-US', { year: 'numeric' , month: 'short' ,
                              day: '2-digit' }).replace(/\//g, '-' )%>
                          </td>
                          <td>
                            <%= ordPrdct.item.title %>
                          </td>
                          <td>
                            <%= ordPrdct.quantity %>
                          </td>
                          <td>
                            <%= ordPrdct.item.saleprice %>
                          </td>
                          <td>
                            <%= order.paymentMethod %>
                          </td>
                          <td>
                            <%= ordPrdct.sub_total %>
                          </td>
                          <td>
                            <%= ordPrdct.status %>
                          </td>
    
                        </tr>
                        <% } %>
                        <% }) %>
                        <% }) %>
                </tbody>
            </table>

                    
        </div>
    </div>
</div>


<a class="btn btn-sm btn-primary m-3" href="/admin/dashboard">Back</a></td>
<a class="btn btn-sm btn-primary m-3" href="/admin/salesReportDownload" target="_blank">Download Sales Report</a>


</div>
<!-- Content End -->



</div>

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Template Javascript -->
<script src="js/main.js"></script>
</body>

</html>