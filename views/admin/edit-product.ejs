        <div class="form-floating mb-3">
            <input type="text" name="saleprice" class="form-control" id="floatingSalePrice"
                placeholder="Enter saleprice" value="<%= pdt.saleprice %>" required>
            <label for="floatingSalePrice">SalePrice</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" name="category" class="form-control" id="floatingCategory"
                placeholder="Enter category" value="<%= pdt.category %>" required>
            <label for="floatingCategory">Category</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" name="stock" class="form-control" id="floatingStock"
                placeholder="Enter stock" value="<%= pdt.stock %>" required>
            <label for="floatingStock">Stock</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" name="size" class="form-control" id="floatingSize"
                placeholder="Enter size" value="<%= pdt.size %>" required>
            <label for="floatingSize">Size</label>
        </div>
