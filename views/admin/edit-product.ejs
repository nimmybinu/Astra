<div class="col-sm-12 col-xl-6">
                
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Edit Product</h6>
        <form action="" method="post" enctype="multipart/form-data">
        <div class="form-floating mb-3">
            <input type="text" name="pdtID" class="form-control" id="floatingInput"
            value="<%= pdt.pdtID %>" required>
            <label for="floatingInput">productId</label>
           
        </div>
        <div class="form-floating mb-3">
            <input type="text" name="title" class="form-control" id="floatingPassword"
            value="<%= pdt.title %>" required>
            <label for="floatingPassword">Title</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" name="desc" class="form-control" id="floatingdesc"
                placeholder="Enter Description" value="<%= pdt.desc %>" required>
            <label for="floatingdesc">Description</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" name="price" class="form-control" id="floatingPrice"
                placeholder="Enter price" value="<%= pdt.price %>"  required>
