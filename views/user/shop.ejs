        document.addEventListener('DOMContentLoaded', () => {
    const filterForm = document.getElementById('filterForm');
    filterForm.addEventListener('submit', async event => {
        event.preventDefault();
        
        const selectedCheckboxes = Array.from(document.querySelectorAll('.custom-control-input:checked'));
        const selectedValues = selectedCheckboxes.map(checkbox => checkbox.id);

        // Modify the URL with the selected values
        const queryString = selectedValues.length > 0 ? `?selectedValues=${selectedValues.join(',')}` : '';
        console.log(queryString);
        window.location.href = `/filterByPrice${queryString}`;
    });
});

