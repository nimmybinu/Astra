        //zoom image
        // Function to handle zooming on mouse move for each image
    function handleImageZoom(e) {
      const imageIds = ['zoomed-image1', 'zoomed-image2', 'zoomed-image3'];
  
      imageIds.forEach((imageId) => {
        const zoomedImage = document.getElementById(imageId);
        const imageContainer = zoomedImage.parentElement;
        const { left, top, width, height } = imageContainer.getBoundingClientRect();
        const x = e.clientX - left;
        const y = e.clientY - top;
        const scaleX = width / zoomedImage.naturalWidth;
        const scaleY = height / zoomedImage.naturalHeight;
  
        const translateX = -(x / scaleX - width / 2);
        const translateY = -(y / scaleY - height / 2);
  
        zoomedImage.style.transform = `translate(${translateX}px, ${translateY}px) scale(2)`;
      });
    }
  
    // Add event listener to each image container to handle zooming
    const imageContainers = document.querySelectorAll('.carousel-item');
    imageContainers.forEach((imageContainer) => {
      imageContainer.addEventListener('mousemove', handleImageZoom);
  
      // Reset image transformation on mouse leave for each container
      imageContainer.addEventListener('mouseleave', () => {
        const zoomedImage = imageContainer.querySelector('.d-block');
        zoomedImage.style.transform = 'none';
      });
    });
    </script>
    
  

